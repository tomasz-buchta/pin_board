%h1 Listing pins

%table
  %thead
    %tr
      %th Title
      %th Description
      %th
      %th
      %th
      
  %tbody
    - @pins.each do |pin|
      %tr
        %td= pin.title
        %td= pin.description
        %td= link_to 'Show', pin
        %td= link_to 'Edit', edit_pin_path(pin)
        %td= link_to 'Destroy', pin, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

